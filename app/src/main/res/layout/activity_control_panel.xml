<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_control_panel">

    <ImageView
        android:id="@+id/im_logout"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/logout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.billmatrix.activities.ControlPanelActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/avatar_layout_bg"
            android:gravity="center"
            android:minWidth="208dp"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/billmatrix_login_logo" />

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:src="@drawable/avatar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cp_layout_bg"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/ll_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_pos" />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/pos"
                    android:textColor="@color/cp_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#60000000">

                <LinearLayout
                    android:id="@+id/ll_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/icon_inventory" />

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="96dp"
                        android:text="@string/inventory"
                        android:textColor="@color/cp_red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/im_cp_profile"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:src="@drawable/icon_profile" />

                    <TextView
                        android:id="@+id/tv_cp_profile"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="96dp"
                        android:text="@string/profile"
                        android:textColor="@color/cp_green" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_payments" />

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/payments"
                    android:textColor="@color/cp_yellow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cp_layout_bg"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/ll_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_cp_settings"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_settings" />

                <TextView
                    android:id="@+id/tv_cp_settings"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/settings"
                    android:textColor="@color/cp_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_cp_reports"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_reports" />

                <TextView
                    android:id="@+id/tv_cp_reports"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/reports"
                    android:textColor="@color/cp_red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_cp_customers"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_customers" />

                <TextView
                    android:id="@+id/tv_cp_customers"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/customers"
                    android:textColor="@color/cp_green" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_cp_employee"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:src="@drawable/icon_employees" />

                <TextView
                    android:id="@+id/tv_cp_employee"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="96dp"
                    android:text="@string/employee"
                    android:textColor="@color/cp_yellow" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/copyrightTextView"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#40FFFFFF" />


    </LinearLayout>
</RelativeLayout>