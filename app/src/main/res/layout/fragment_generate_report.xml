<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_reports_bottom_note"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/adminDetailsBG"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="8">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="@string/sno"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1.45"
                android:gravity="center"
                android:text="@string/ITEM_NAME"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/VENDOR"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/DATE"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/COST"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="@string/QTY"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/DISCOUNT"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/TOTAL"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/green_button"
                    android:gravity="center"
                    android:text="@string/Print"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/adminDetailsBG"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="8">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <AutoCompleteTextView
                android:id="@+id/atv_rep_item_name"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <AutoCompleteTextView
                android:id="@+id/atv_rep_vendor"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1.2"
                android:background="@drawable/edit_text_border"
                android:lines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_report_pur_date"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:drawableRight="@drawable/date"
                android:gravity="center_vertical"
                android:hint="@string/DATE"
                android:inputType="date"
                android:maxLength="12"
                android:paddingLeft="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_report_cost"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.6"
                android:background="@drawable/edit_text_border"
                android:inputType="numberDecimal"
                android:lines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_report_qty"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="0.4"
                android:background="@drawable/edit_text_border"
                android:inputType="number"
                android:lines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/sp_rep_unit"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/units_array"
                    android:padding="6dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/et_report_customunit"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_border"
                    android:lines="1"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_report_discount"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.8"
                android:background="@drawable/edit_text_border"
                android:inputType="numberDecimal"
                android:lines="1"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.8"
                android:background="@drawable/edit_text_disabled_border"
                android:enabled="false"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_report"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/green_button"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_generated_reports"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reports_bottom_note"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@color/adminDetailsBG"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/report_name"
            android:textColor="@android:color/black" />

        <EditText
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edit_text_border"
            android:lines="1"
            android:minWidth="196dp"
            android:padding="6dp"
            android:textColor="@android:color/black" />

        <Button
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/green_button"
            android:text="@string/save"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>