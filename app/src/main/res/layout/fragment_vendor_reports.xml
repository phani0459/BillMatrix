<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/adminDetailsBG"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="6">

        <Spinner
            android:id="@+id/sp_report_vendor_types"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.25"
            android:entries="@array/employee_status"
            android:padding="6dp"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/sp_report_vendors"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.25"
            android:entries="@array/employee_status"
            android:padding="6dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_report_vendor_from_date"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/date"
            android:gravity="center_vertical"
            android:hint="@string/from_date"
            android:inputType="date"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_report_vendor_to_date"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/date"
            android:gravity="center_vertical"
            android:hint="@string/to_date"
            android:inputType="date"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:text="@string/VIEW"
                android:textColor="@android:color/white" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:text="@string/Print"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/adminDetailsBG"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="6">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/sno"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/VENDOR"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ITEM_NAME"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/DATE"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/MY_COST"
            android:textColor="@android:color/black" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/QTY"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>