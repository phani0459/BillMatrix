<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_vendros_no_results"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/No_results"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/adminDetailsBG"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="7">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="@string/sno"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/vendor_id"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="@string/vendor_name"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="@string/vendor_since"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/vendor_add"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/ACTION"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="7">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <EditText
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.7"
                android:background="@drawable/edit_text_disabled_border"
                android:enabled="false"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_vendorName"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.4"
                android:background="@drawable/edit_text_border"
                android:digits="@string/only_alphaNumeric"
                android:inputType="text"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_vendorSince"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.9"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:inputType="date"
                android:maxLength="12"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_vendorAdd"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.2"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_vendorPhone"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.8"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:inputType="number"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/et_vendorEmail"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1.2"
                android:background="@drawable/edit_text_border"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:padding="6dp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_addVendor"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/green_button"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vendorsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </LinearLayout>
</RelativeLayout>